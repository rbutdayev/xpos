{
  "name": "xpos-fiscal-printer-bridge",
  "version": "2.0.0",
  "description": "XPOS Fiscal Printer Bridge - Desktop Application",
  "main": "electron/main.js",
  "bin": "index.js",
  "scripts": {
    "start": "node index.js",
    "electron:dev": "electron .",
    "electron:build": "electron-builder --win --mac",
    "electron:build:win": "electron-builder --win",
    "electron:build:mac": "electron-builder --mac",
    "build": "pkg . --targets node18-win-x64,node18-macos-x64,node18-linux-x64 --output dist/xpos-printer-bridge",
    "build:win": "pkg . --targets node18-win-x64 --output dist/xpos-printer-bridge-win.exe",
    "build:mac": "pkg . --targets node18-macos-x64 --output dist/xpos-printer-bridge-mac",
    "build:linux": "pkg . --targets node18-linux-x64 --output dist/xpos-printer-bridge-linux"
  },
  "build": {
    "appId": "az.xpos.fiscal-printer-bridge",
    "productName": "XPOS Printer Bridge",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "electron/**/*",
      "index.js",
      "!config.json",
      "package.json"
    ],
    "asarUnpack": [
      "index.js"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "electron/assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "electron/assets/icon.icns",
      "category": "public.app-category.business"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "XPOS Printer Bridge"
    }
  },
  "pkg": {
    "assets": [
      "config.json.example"
    ],
    "outputPath": "dist"
  },
  "keywords": [
    "fiscal-printer",
    "pos",
    "caspos",
    "xpos",
    "polling"
  ],
  "author": "ONYX xPos",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "electron-store": "^8.1.0",
    "auto-launch": "^5.0.6"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
